{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "classValidatorShim": true
        }
      }
    ],
    "assets": [
      {
        "include": "**/*.lua",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.ejs",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
